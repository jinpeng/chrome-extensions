{
  "name": "Itpub Ebook Downloader",
  "description": "Download ebooks from http://www.itpub.net.",
  "version": "1.0.0",
  "minimum_chrome_version": "31",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "downloads",
    "<all_urls>"
  ],
  "page_action": {
    "default_title": "Itpub Download",
    "default_icon": "/icon128.png",
    "default_popup": "/views/popup.html"
  },
  "icons": {
    "16": "/icon16.png",
    "24": "/icon24.png",
    "32": "/icon32.png",
    "48": "/icon48.png",
    "64": "/icon64.png",
    "128": "/icon128.png",
    "256": "/icon256.png"
  },
  "web_accessible_resources": [
    "/images/download.png"
  ],
  "background": {
    "scripts": ["/scripts/defaults.js"]
  },
  "options_page": "/views/options.html"
}